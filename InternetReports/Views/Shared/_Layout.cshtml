<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DA HINOJOSA | Transporte terrestre, agencia aduanal y servicios mar&iacute;timos</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="full-header header-3">

        <div class="navbar style-1 affix navbar-fixed-top clearfix">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index","Inicio")" class="navbar-brand">
                        <div class="logotipo changelogo"></div>
                    </a>

                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav color-nav navbar-left">
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle navbar-link">Reportes</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Operaciones", "Index", "Operaciones", new { area = "Reportes" }, new { @class = "nav-link" })</li>
                            </ul>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="clearfix" style="background-color:#fff">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="col-sm-12 col-md-12">
            <p>&copy; @DateTime.Now.Year - Grupo D.A. Hinojosa</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
